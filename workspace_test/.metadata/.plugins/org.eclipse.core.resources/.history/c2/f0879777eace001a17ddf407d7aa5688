

#include <signal.h>
#include <time.h>
#include <unistd.h>
#include <sys/siginfo.h>
#include <stdio.h>

int main(){
    timer_t  timerid;
	struct sigevent ev;
	ev.sigev_notify = SIGEV_PULSE;


	SIGEV_PULSE_INIT(&ev,NULL, SIGEV_PULSE_PRIO_INHERIT, CODE_TIMER, 0);
	timer_create(CLOCK_REALTIME,&ev,&timerid);

	while(1){
		printf("%d\n",timerid);
		sleep(1);
	}

}
